{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments":true, 
    "alwaysStrict": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
